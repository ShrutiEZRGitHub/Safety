@page "/safetyreportingdetails-reassign"

<PageTitle>All Safety Reports>Safety Reporting>Re-Assign Mode</PageTitle>

@* Section Heading *@
<div class="row">
    <div class="col-12 col-lg-8 pt-3">
        <div class="d-flex justify-content-start">
            <a href="safetyreportgrid">
                <RadzenButton class="rz-border-radius-10 rz-shadow-10 rz-pt-3 --color-primary">
                   <i class="fa-solid fa-arrow-left"></i>
                </RadzenButton>
            </a>
            <p class="title ps-3 py-1 mb-0">Safety Reporting</p>
        </div>
    </div>

    <div class="col-12 col-lg-4 rz-text-align-end p-3">
        <a href="history">
            <RadzenButton Variant="Variant.Outlined"
                class="text-primary bg-light w-25 border border-primary shadow rounded-pill rz-m-2">
                <i class="fa-solid fa-clock-rotate-left"></i>History
            </RadzenButton>
        </a>

        <RadzenButton Variant="Variant.Flat" class="disable-btn rounded-pill rz-m-2">
            <i class="fa-solid fa-pen-to-square"></i> Re-assign
        </RadzenButton>

        <a href="safetyreportingdetails-edit">
            <RadzenButton Variant="Variant.Flat" Icon="add_circle_outline" class="create-btn">
                <i class="fa-solid fa-pen-to-square"></i> Edit
            </RadzenButton>
        </a>
    </div>
</div>

<RadzenCard Class="safe-report-card rz-p-8">
    @* Row-1 *@
    <div class="row rz-py-2">
        <div class="col-12 col-lg-3">
            <h6 class="text-secondary">Incident Id</h6>
            <h6 class="text-dark fw-bold">5892</h6>
        </div>

        <div class="col-12 col-lg-3">
            <h6 class="text-secondary">Date</h6>
            <h6 class="text-dark fw-bold">07-Feb-2024 16:14</h6>
        </div>

        <div class="col-12 col-lg-3">
            <h6 class="text-secondary">Status</h6>
            <h6 class="text-dark fw-bold">In Progress</h6>
        </div>

        <div class="col-12 col-lg-3">
            @* EMPTY *@
        </div>
    </div>

    @* Row-2 *@
    <div class="row rz-py-2 d-flex justify-content-between">
        <div class="col-12 col-lg-3 me-2 bg-white rounded rz-p-2">
            <h6 class="text-secondary">Safety Type</h6>
            <h6 class="text-dark fw-bold">
                <RadzenDropDown Data="@(stList)" @bind-Value="@stDD" class="w-100"/>
            </h6>
        </div>

        <div class="col-12 col-lg-3 me-2 bg-white rounded rz-p-2">
            <h6 class="text-secondary">Actual Severity</h6>
            <h6 class="text-dark fw-bold">
                <RadzenDropDown Data="@(asList)" @bind-Value="@asDD" class="w-100"/>
            </h6>
        </div>

        <div class="col-12 col-lg-3 me-2 bg-white rounded rz-p-2">
            <h6 class="text-secondary">Potential Severity</h6>
            <h6 class="text-dark fw-bold">
                <RadzenDropDown Data="@(psList)" @bind-Value="@psDD" class="w-100"/>
            </h6>
        </div>

        <div class="col-12 col-lg-2 bg-white rounded rz-p-2">
            <h6 class="text-secondary">Group</h6>
            <h6 class="text-dark fw-bold">
                <RadzenDropDown Data="@(grpList)" @bind-Value="@grpDD" class="w-100"/>
            </h6>
        </div>
    </div>

    @* Row-3 *@
    <div class="row rz-py-2 d-flex justify-content-start">
        <div class="col-12 col-lg-3 me-5 bg-white rounded rz-p-2">
            <h6 class="text-secondary">Walk Type</h6>
            <h6 class="text-dark fw-bold">
                <RadzenDropDown Data="@(wtList)" @bind-Value="@wtDD" class="w-100"/>
            </h6>
        </div>

        <div class="col-12 col-lg-8 bg-white rounded rz-p-2">
            <h6 class="text-secondary">Department</h6>
            <h6 class="text-dark fw-bold">
                <RadzenTextBox class="w-100" Placeholder="Test uat"/>
            </h6>
        </div>
    </div>

    @* Row-4 *@
    <div class="row rz-py-2 d-flex justify-content-between">
        <div class="col-12 col-lg-3 me-2 bg-light rounded rz-p-2">
            <h6 class="text-secondary">Safety Type</h6>
            <h6 class="text-secondary pt-2">Dry Cargo</h6>
        </div>

        <div class="col-12 col-lg-3 me-2 bg-light rounded rz-p-2">
            <h6 class="text-secondary">Assigned to Name</h6>
            <h6 class="text-secondary pt-2">Devang Parmar</h6>
        </div>

        <div class="col-12 col-lg-3 me-2 bg-light rounded rz-p-2">
            <h6 class="text-secondary">Assigned to Email</h6>
            <h6 class="text-secondary pt-2">devangparamr@empezargroup.com</h6>
        </div>

        <div class="col-12 col-lg-2 bg-light rounded rz-p-2">
            <h6 class="text-secondary">Reported By</h6>
            <h6 class="text-secondary pt-2">3_LEVEL</h6>
        </div>
    </div>

    @* Row-5 *@
    <div class="row rz-py-2 d-flex justify-content-between">
        <div class="col-12 col-lg-3 me-2 bg-white rounded rz-p-2">
            <h6 class="text-secondary">Department Responsible</h6>
            <h6 class="text-dark fw-bold">
                <RadzenDropDown Data="@(drList)" @bind-Value="@drDD" class="w-100"/>
            </h6>
        </div>

        <div class="col-12 col-lg-3 me-2 bg-white rounded rz-p-2">
            <h6 class="text-secondary">Assigned To</h6>
            <h6 class="text-dark fw-bold">
                <RadzenAutoComplete Placeholder="Devgan Permar" class="w-100" />
            </h6>
        </div>

        <div class="col-12 col-lg-3 me-2 bg-white rounded rz-p-2">
            <h6 class="text-secondary">Shift</h6>
            <h6 class="text-dark fw-bold">
                <RadzenDropDown Data="@(shiftList)" @bind-Value="@shiftDD" class="w-100"/>
            </h6>
        </div>

        <div class="col-12 col-lg-2 bg-white rounded rz-p-2">
            <h6 class="text-secondary">Comments</h6>
            <RadzenTextBox class="w-100" Placeholder="Comments"/>
        </div>
    </div>

    <div class="rz-text-align-end rz-p-3">
        <a href="safetyreportingdetails">
        <RadzenButton Variant="Variant.Outlined" Text="Cancel" class="text-primary bg-white border border-primary rounded-pill" />
        </a>

        <a href="safetyreportingdetails">
        <RadzenButton Variant="Variant.Flat" Text="Save" class="create-btn"/>
        </a>
    </div>

</RadzenCard>

<div class="row rz-mt-10">
    <div class="col-12 col-lg-6">
        <RadzenCard Class="w-auto shadow rounded">
            <h6 class="card-txt rz-pb-10 mb-0">Incident Images(2)</h6>
            <div class="d-flex justify-content-evenly">
                <img src="_content/SharedUI/img/assests/img1.svg" /> 
                <img src="_content/SharedUI/img/assests/img2.svg" />
            </div>
        </RadzenCard>
    </div>

    <div class="col-12 col-lg-6">
        <RadzenCard Class="shadow rounded rz-p-8">
            <h6 class="card-txt rz-mb-12">Description Voice Note</h6>
            <RadzenDropDown Data="@(langList)" @bind-Value="@langDD" class="w-100"/>
            <br /><br />
            <audio controls autoh6lay muted>
                <source src="horse.ogg" tyh6e="audio/ogg">
                <source src="horse.mh63" tyh6e="audio/mh6eg">
                Your browser does not support the audio element.
            </audio>
            <h6 class="text-secondary rz-mt-10">At west basin view point railing damaged need to be reh6aired</h6>
        </RadzenCard>
    </div>
</div>

<RadzenCard Class="shadow round rz-mt-10 p-0">
    <div class="mapouter">
        <div class="gmap_canvas">
            <iframe src="https://www.google.com/maps/d/embed?mid=118EIOrWpUInGDhhy3AQfidWBKA5T8Z4&ehbc=2E312F"
            width="100%" height="600" frameborder="0" class="map_canvas"></iframe>
        </div>
    </div>
</RadzenCard>

