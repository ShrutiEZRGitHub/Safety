@page "/create_dept"

<PageTitle>Update Existing Department</PageTitle>

<p class="title">Department</p>

<!--Create User Form-->
<RadzenCard Class="rz-px-12 rz-py-12">
    <div class="row">
        <!-- Left Column - Image -->
        <div class="col-12 col-lg-6">

            <RadzenStack AlignItems="AlignItems.Center" />
            <RadzenImage Path="_content/SharedUI/img/assests/create-new-accoun.svg"
                AlternateText="Create Account Image" />

        </div>

        <!-- Right Column - Form -->
        <div class="col-12 col-lg-6">
            <RadzenStack>
                <!-- Full Name -->
                <RadzenFormField Text="Department Name" class="label-style">
                    <RadzenTextBox />
                </RadzenFormField>

                <!-- Geo Location Checkbox -->
                <div class="rz-py-5">
                    <RadzenCheckBox TValue="bool" Value=@glc Name="GLC" />
                    <RadzenLabel Text="Is Geo Location" Component="GLC" />
                </div>

                <!-- Contact Number -->
                <RadzenFormField Text="HOD Name" class="label-style">
                    <RadzenTextBox />
                </RadzenFormField>

                <!-- User Level -->
                <RadzenFormField Text="Email To Users" class="label-style">
                    <RadzenTextBox />
                </RadzenFormField>

                <!-- Employement Type -->
                <RadzenFormField Text="Email CC User" class="label-style">
                    <RadzenTextBox />
                </RadzenFormField>
            </RadzenStack>

            <!-- Is Active Checkbox -->
            <div class="rz-py-5">
                <RadzenCheckBox TValue="bool" Value=@statusvalue Name="CheckBox1" />
                <RadzenLabel Text="Is Active" Component="CheckBox1" />
            </div>

            <div class="row">
                <!-- Clear Button -->
                <RadzenButton Variant="Variant.Outlined" Text="Clear" class="clear-btn rounded-pill w-25" />

                <!-- Create User Button -->
                <RadzenButton Variant="Variant.Flat" Text="Update" class="submit-btn rounded-pill w-25" />
            </div>

        </div>
    </div>
</RadzenCard>

<a href="deptgrid">
    <RadzenButton class="rz-border-radius-10 rz-shadow-10 rz-pt-4 --color-primary">
        <i class="fa-solid fa-arrow-left"></i>
    </RadzenButton>
</a>


@code {
    bool glc;
    bool statusvalue;
}