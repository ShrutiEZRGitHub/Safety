                </BSCard>

                <BSNav Class="flex-grow-1" PaddingEnd="Padding.Medium">

                    <BSNavItem Url="dashboard">
                        <div class="nav-item" href="dashboard">
                            <img src="_content/SharedUI/img/assests/Dashboard_Vector.svg" class="rz-p-3" />
