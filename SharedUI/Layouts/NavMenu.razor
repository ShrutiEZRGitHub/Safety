                            Walk Type List
                        </div>
                    </BSNavItem>
                    <BSNavItem Url="firmgrid">
                        <div class="nav-item">
                            <img src="_content/SharedUI/img/assests/List_Vector.svg" class="rz-p-3" />
                            Firm List
                        </div>
                    </BSNavItem>

                </BSNav>

            </Content>
        </BSOffCanvas>
    </BSContainer>
</BSNavbar>

@code {
    private BSOffCanvas? _offCanvasRef;

    private async Task Show()
    {
        if (_offCanvasRef != null) await _offCanvasRef.ToggleAsync();
    }

}
